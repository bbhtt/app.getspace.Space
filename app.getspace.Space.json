{
    "app-id": "app.getspace.Space",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "space",
    "separate-locales": false,
    "finish-args": [
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=x11"
    ],
    "modules": [
        {
            "name": "space",
            "buildsystem": "simple",
            "build-commands": [
                "cp -r space /app/space",
                "chmod +x /app/space/client_mobile",
                "mkdir /app/bin",
                "ln -s /app/space/client_mobile /app/bin/space",

                "install -Dm644 /app/space/data/flutter_assets/assets/images/logo.svg /app/share/icons/hicolor/scalable/apps/app.getspace.Space.svg",
                "install -Dm644 app.getspace.Space.desktop /app/share/applications/app.getspace.Space.desktop",
                "install -Dm644 app.getspace.Space.metainfo.xml /app/share/appdata/app.getspace.Space.metainfo.xml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://space-linux.s3.eu-west-1.amazonaws.com/releases/space-1.4.0.tar.xz",
                    "dest": "space",
                    "sha256": "b0bcc0a961d8da308b35123c41367f497ce8414443031ca75d676abb15598ce8"
                },
                {
                    "type": "file",
                    "path": "app.getspace.Space.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "app.getspace.Space.desktop"
                }
            ]
        }
    ]
}
